import { Bin } from "///src/model/ccu/binRangesResponse";
import { CreditcardUtilityService } from "///src/service/ccu/creditcardUtilityService";

import { Bin } from "///src/model/ccu/binRangesResponse";
import { CreditcardUtilityService } from "///src/service/ccu/creditcardUtilityService";
import fetch from 'node-fetch';

import { CreditCardArrangementReportService } from '../../../src/service/ccar/creditCardArrangementReportService';
import { ErrorCodes } from '../../../src/util/errorCodes';
import { ServerError } from '../../../src/util/serverError';

// Mock logging functions
jest.mock('../../../src/util/logging', () => ({
    logBackendServiceError: jest.fn(),
    logBackendServiceRequest: jest.fn(),
    logBackendServiceResponse: jest.fn(),
    error: jest.fn(),
    trace: jest.fn(),
    debug: jest.fn(),
    info: jest.fn()
}));

// Mock CrossAccountAPICache
const mockValue = jest.fn().mockResolvedValue({
    apiKey: 'mock-api-key',
    apiGatewayId: 'mock-gateway-id'
});

const mockCrossAccountAPICache = jest.fn().mockImplementation(() => ({
    Value: mockValue
}));

jest.mock('../../../../common/cross account/cached_api_information', () => ({
    __esModule: true,
    default: mockCrossAccountAPICache
}));

describe('CreditCardArrangementReportService Tests', () => {
    let service: CreditCardArrangementReportService;
    const mockCorrelationId = 'test-correlation-id';
    const mockCardNumber = '1234567890123456';
    const mockTsysClientId = 'test-client-id';

    beforeEach(() => {
        // Clear all mocks
        jest.clearAllMocks();
        
        // Set environment variables EXACTLY as they appear in the service
        process.env = {
            // Matching the exact names from the service
            crossRegion: 'us-east-1',                  // matches process.env.crossRegion
            REGION: 'us-east-1',                       // matches process.env.REGION
            crossAccountRoleForCCAR: 'test-role',      // matches process.env.crossAccountRoleForCCAR
            ssmParamCcarApiKey: 'test-api-key',        // matches process.env.ssmParamCcarApiKey
            ssmParamCcarGatewayId: 'test-gateway-id',  // matches process.env.ssmParamCcarGatewayId
            getCardDetailsUrl: 'http://test-url',
            getCustomerDetailsUrl: 'http://test-url'
        };

        // Mock global fetch
        global.fetch = jest.fn();
    });

    afterEach(() => {
        // Clean up
        jest.clearAllMocks();
        process.env = {};
    });

    describe('Service Initialization', () => {
        test('should initialize successfully with all required env vars', () => {
            service = new CreditCardArrangementReportService(mockCorrelationId);
            expect(service).toBeDefined();
        });

        test('should throw error when REGION is empty', () => {
            process.env.REGION = '';
            expect(() => {
                new CreditCardArrangementReportService(mockCorrelationId);
            }).toThrow(ServerError);
        });

        test('should throw error when REGION is undefined', () => {
            delete process.env.REGION;
            expect(() => {
                new CreditCardArrangementReportService(mockCorrelationId);
            }).toThrow(ServerError);
        });
    });

    describe('getCreditCardDetail', () => {
        beforeEach(() => {
            service = new CreditCardArrangementReportService(mockCorrelationId);
        });

        test('should fetch card details successfully', async () => {
            (global.fetch as jest.Mock).mockResolvedValueOnce({
                status: 200,
                json: () => Promise.resolve({
                    status: 'S',
                    data: { cardNumber: mockCardNumber }
                })
            });

            const result = await service.getCreditCardDetail(false, mockCardNumber, mockTsysClientId);
            expect(result.status).toBe('S');
            expect(result.data.cardNumber).toBe(mockCardNumber);
        });
    });

    describe('fetchCustomerDetails', () => {
        beforeEach(() => {
            service = new CreditCardArrangementReportService(mockCorrelationId);
        });

        test('should fetch customer details successfully', async () => {
            (global.fetch as jest.Mock).mockResolvedValueOnce({
                status: 200,
                json: () => Promise.resolve({
                    status: 'S',
                    data: { customerId: 'test-customer' }
                })
            });

            const result = await service.fetchCustomerDetails(mockCardNumber, mockTsysClientId);
            expect(result.status).toBe('S');
        });
    });
});
